		Join our Discord <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-discord" viewBox="0 0 16 16">
			<path d="M13.545 2.907a13.227 13.227 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.19 12.19 0 0 0-3.658 0 8.258 8.258 0 0 0-.412-.833.051.051 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.041.041 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032c.001.014.01.028.021.037a13.276 13.276 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019c.308-.42.582-.863.818-1.329a.05.05 0 0 0-.01-.059.051.051 0 0 0-.018-.011 8.875 8.875 0 0 1-1.248-.595.05.05 0 0 1-.02-.066.051.051 0 0 1 .015-.019c.084-.063.168-.129.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.052.052 0 0 1 .053.007c.08.066.164.132.248.195a.051.051 0 0 1-.004.085 8.254 8.254 0 0 1-1.249.594.05.05 0 0 0-.03.03.052.052 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.235 13.235 0 0 0 4.001-2.02.049.049 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.034.034 0 0 0-.02-.019Zm-8.198 7.307c-.789 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612Zm5.316 0c-.788 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612Z" />
		</svg>
	</a>

	@if (Models.Twitch.ChannelNamesTwitch.Count > 0)
	{
		<div class="separator"></div>
		<h2>Fastest Streams Live:</h2>
		@foreach (string channelName in Models.Twitch.ChannelNamesTwitch)
		{
			<h4 style="line-height: 50px;">
				<a href="https://www.twitch.tv/@channelName.ToLower()">
					@*Twitch logo*@
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitch" viewBox="0 0 16 16">
						<path d="M3.857 0 1 2.857v10.286h3.429V16l2.857-2.857H9.57L14.714 8V0H3.857zm9.714 7.429-2.285 2.285H9l-2 2v-2H4.429V1.143h9.142v6.286z" />
						<path d="M11.857 3.143h-1.143V6.57h1.143V3.143zm-3.143 0H7.571V6.57h1.143V3.143z" />
					</svg> @channelName
				</a>
			</h4>
			<div class="twitch-div" style="background-image: url('https://static-cdn.jtvnw.net/previews-ttv/live_user_@channelName.ToLower()-320x180.jpg')">
				<a href="https://www.twitch.tv/@channelName.ToLower()">
					<div style="height:180px; width:320px; background-color: rgba(0, 0, 0, 0.5); line-height: 180px;">
						@*Twitch logo*@
						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-twitch" viewBox="0 0 16 16">
							<path d="M3.857 0 1 2.857v10.286h3.429V16l2.857-2.857H9.57L14.714 8V0H3.857zm9.714 7.429-2.285 2.285H9l-2 2v-2H4.429V1.143h9.142v6.286z" />
							<path d="M11.857 3.143h-1.143V6.57h1.143V3.143zm-3.143 0H7.571V6.57h1.143V3.143z" />
						</svg>
					</div>
				</a>
			</div>
		}
	}

	@if (Models.YouTube.VideoList.Count > 0)
	{
		<div class="separator"></div>
		<h2>Fastest Videos:</h2>

		@foreach (var item in Models.YouTube.VideoList)
		{
			<div class="yt-div" style="background-image: url('https://i.ytimg.com/vi/@item.resourceId.videoId/mqdefault.jpg')">
				<a href="https://www.youtube.com/watch?v=@item.resourceId.videoId">
					<div style="height:180px; width:320px; background-color: rgba(0, 0, 0, 0.5);">
						@*Title and play button*@
						@item.title <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-play-btn-fill" viewBox="0 0 16 16">
							<path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm6.79-6.907A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814l-3.5-2.5z" />
						</svg>
					</div>
				</a>
			</div>
		}
	}

	<div class="separator"></div>
	<h2>Fastest News:</h2>
	@foreach (string message in Models.News.NewsMessages)
	{
		<div class="news-div">
			@Html.Raw(message)
		</div>
	}
</div>
