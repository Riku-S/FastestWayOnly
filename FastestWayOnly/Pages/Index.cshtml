@model IndexModel
@{
	ViewData["Title"] = "Home";
}

<div class="text-center">
	<h1 class="display-4" style="font-weight: 900;">Fastest Way Only<span class="smaller">.FANS</span></h1>
	<a class="button-like" href="https://discord.gg/a7PmgK3RVr">
