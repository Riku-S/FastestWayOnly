@page
@model FastestWayOnly.Pages.MembersModel
@{
	ViewData["Title"] = "Members";
}

<div class="text-center">
	<h1>Members</h1>
	Here are the members of the team and the shortcuts they have done to join the team. Check out the linked videos and channels to see satisfying content of our players finishing faster than people knew was possible.
</div>

<table>
	<tr>
		<th colspan=2>Member</th>
		<th>
			Cut
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-scissors" viewBox="0 0 16 16">
				<path d="M3.5 3.5c-.614-.884-.074-1.962.858-2.5L8 7.226 11.642 1c.932.538 1.472 1.616.858 2.5L8.81 8.61l1.556 2.661a2.5 2.5 0 1 1-.794.637L8 9.73l-1.572 2.177a2.5 2.5 0 1 1-.794-.637L7.19 8.61 3.5 3.5zm2.5 10a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0zm7 0a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0z" />
			</svg>
		</th>
		<th>
			Date
		</th>
		<th>
		</th>
	</tr>
	@{int count = 0;}
	@foreach (Models.Member member in Models.Member.GetMembers())
	{
		<tr>
			<td style="padding-right: 0; width:48px;">
				@if (member.Nationality != "")
				{
					<img src="~/assets/graphics/flags/@(member.Nationality).png" alt="@member.Nationality" height="16px">
				}
@*				else
				{
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
						<path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
					</svg>
				}*@
			</td>
			<td>
				<span style="font-weight: bold">@member.Name</span>
			</td>
			<td>
				@if (member.RecruitVideo != "")
				{
					<a href="@member.RecruitVideo">@member.RecruitMap</a>
				}
				else if (@member.RecruitMap == "Founder")
				{
					<span style="font-style: italic">@member.RecruitMap</span>
				}
				else
				{
					@member.RecruitMap
				}
			</td>
			<td>
				<span id="date-@count">XDD</span>
			</td>
			<td>
				@if (member.YouTube != "")
				{
					<a href="https://www.youtube.com/channel/@member.YouTube" style="text-decoration:none">
						@*Play button*@
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-play-btn-fill" viewBox="0 0 16 16">
							<path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm6.79-6.907A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814l-3.5-2.5z" />
						</svg>
					</a>
				}
				@if (member.Twitch != "")
				{
					<a href="https://www.twitch.tv/@member.Twitch" style="text-decoration:none">
						@*Twitch logo*@
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitch" viewBox="0 0 16 16">
							<path d="M3.857 0 1 2.857v10.286h3.429V16l2.857-2.857H9.57L14.714 8V0H3.857zm9.714 7.429-2.285 2.285H9l-2 2v-2H4.429V1.143h9.142v6.286z" />
							<path d="M11.857 3.143h-1.143V6.57h1.143V3.143zm-3.143 0H7.571V6.57h1.143V3.143z" />
						</svg>
					</a>
				}
			</td>
		</tr>
		count++;
	}
</table>

