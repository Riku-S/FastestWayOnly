Thanks to Edge for keeping track of recruits, and FWO in general for helping me out with this list.

@section Scripts
{
	<script>
		$(document).ready(function () {
			@{
				int jsCount = 0;
			}
			@foreach (Models.Member member in Models.Member.GetMembers())
			{
				<text>
					var date = new Date(@member.Date.Year, @member.Date.Month - 1, @member.Date.Day);
					document.getElementById("date-@jsCount").textContent = date.toLocaleDateString();
				</text>
				jsCount++;
			}
			@{
				jsCount = 0;
			}
		@foreach (Models.Member member in Models.Member.GetExMembers())
		{
			<text>
				var date = new Date(@member.Date.Year, @member.Date.Month - 1, @member.Date.Day);
				document.getElementById("ex-date-@jsCount").textContent = date.toLocaleDateString();
			</text>
			jsCount++;
		}
		});
	</script>
}
